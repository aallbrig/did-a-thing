<div class="container my-5">
    <!-- Top Half: Toggle Button -->
    <div class="row">
        <div class="col-12 text-center mb-5">
            <h1 class="display-4 mb-4">Did you do the thing today?</h1>
            <button id="toggleButton" class="btn btn-outline-primary rounded-circle toggle-button" type="button">
                <span class="toggle-text">I did it!</span>
            </button>
            <p class="mt-3 text-muted">Click the button to mark today as complete!</p>
        </div>
    </div>

    <!-- Bottom Half: Calendar Tabs and View -->
    <div class="row">
        <div class="col-12">
            <!-- Calendar Tabs -->
            <div id="calendarTabs">
                <!-- Tabs will be generated by JavaScript -->
            </div>

            <!-- Calendar Header with Edit Button -->
            <div class="calendar-header-section">
                <h2 id="calendarNameDisplay">My Daily Thing</h2>
                <button id="editCalendarBtn" class="edit-calendar-btn" title="Edit calendar">
                    ‚úèÔ∏è Edit
                </button>
            </div>

            <!-- Calendar Card -->
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <button id="prevMonth" class="btn btn-outline-light btn-sm">&larr;</button>
                        <div class="d-flex align-items-center gap-2">
                            <h4 id="monthYear" class="mb-0"></h4>
                            <button id="goToTodayBtn" class="btn btn-outline-light btn-sm" title="Go to current month">Today</button>
                        </div>
                        <button id="nextMonth" class="btn btn-outline-light btn-sm">&rarr;</button>
                    </div>
                </div>
                <div class="card-body">
                    <div class="calendar-grid" id="calendar">
                        <!-- Calendar will be generated by JavaScript -->
                    </div>
                </div>
            </div>

            <!-- Stats Section -->
            <div class="stats-section" id="statsContainer">
                <!-- Stats will be generated by JavaScript -->
            </div>
        </div>
    </div>
</div>

<!-- Add Calendar Modal -->
<div class="modal fade" id="addCalendarModal" tabindex="-1" aria-labelledby="addCalendarModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addCalendarModalLabel">Add New Calendar</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="addCalendarForm">
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="calendarName" class="form-label">Calendar Name *</label>
                        <input type="text" class="form-control" id="calendarName" name="calendarName" required
                               placeholder="e.g., Exercise, Reading, Meditation" maxlength="50">
                        <div class="form-text">Choose a name that describes your daily habit or task.</div>
                    </div>

                    <div class="mb-3">
                        <label for="calendarColor" class="form-label">Dot Color</label>
                        <div class="color-input-group">
                            <input type="color" id="calendarColor" name="calendarColor" value="#28a745"
                                   title="Choose calendar color">
                            <input type="text" class="form-control" id="calendarColorText" name="calendarColorText"
                                   value="#28A745" placeholder="#RRGGBB" pattern="^#[0-9A-Fa-f]{6}$"
                                   title="Enter hex color code (e.g., #FF5733)">
                        </div>
                        <div class="form-text">This color will be used for completion dots on the calendar.</div>
                    </div>

                    <div class="mb-3">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="allowFutureDays" name="allowFutureDays">
                            <label class="form-check-label" for="allowFutureDays">
                                Allow marking future days as done
                            </label>
                            <div class="form-text">When enabled, you can click on future calendar days to mark them as completed in advance.</div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" id="deleteCalendarBtn" class="btn btn-danger me-auto" style="display: none;">
                        üóëÔ∏è Delete Calendar
                    </button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Add Calendar</button>
                </div>
            </form>
        </div>
    </div>
</div>
